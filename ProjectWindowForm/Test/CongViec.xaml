<UserControl x:Class="Test.CongViec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test"
             mc:Ignorable="d" Height="151" Width="650">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="151" VerticalAlignment="Top" Width="650" RadiusY="58.656" RadiusX="58.656" Fill="#FF9C8181"/>
        <StackPanel Orientation="Horizontal">
            <Rectangle Height="125" Width="190" RadiusX="50" RadiusY="50" Margin="30,0,0,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding URL}" Stretch="Uniform" />
                </Rectangle.Fill>
            </Rectangle>
            <Label Content="{Binding Title}"  Width="338" Height="134" FontSize="20"/>
            
            <Button Width="76" Height="92" Background="{x:Null}" Click="Button_Click" Content="Xem chi tiết " BorderBrush="{x:Null}" FontWeight="Bold"></Button>
        </StackPanel>
    </Grid>
</UserControl>
